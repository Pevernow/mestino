<div class="uk-width-3-5">
  <article class="uk-card uk-card-default uk-card-hover uk-card-body " style="position: relative;top: 1%;border-radius: 5%;">
    <h1><%= page.title %></h1>
    <span class="uk-label uk-label-success">
      <svg class="sicon" aria-hidden="true">
        <use xlink:href="#icon-date"></use>
      </svg>
      <%- date(page.date, "YYYY-MM-DD") %></span>
    <span class="uk-label uk-label-warning">
      <svg class="sicon" aria-hidden="true">
        <use xlink:href="#icon-wordcount"></use>
      </svg>
      <%- wordcount(page.content)%></span>
    <span class="uk-label uk-label-danger uk-text-lowercase">
      <svg class="sicon" aria-hidden="true">
        <use xlink:href="#icon-time"></use>
      </svg>

      <%if(min2read(page.content)!=1){%>
      <%-min2read(page.content)%>
      <%}else{%>
        &lt;1
        <%}%>
      min
    </span>
    <div id="post">
    <%- page.content %>
    </div>
  </article>
  <div class="uk-card uk-card-default uk-card-body uk-card-hover" style="position: relative;top: 2%;border-radius: 10%;">
    <%- include("partials/comments.ejs") %>
  </div>
</div>